{
  "name": "slima-mcp",
  "version": "0.1.10",
  "description": "MCP Server for Slima - AI Writing IDE for Novel Authors. Works with Claude, ChatGPT, Gemini, Cursor, and any MCP-compatible AI tool.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "slima-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "build:cli": "tsup",
    "build:worker": "tsup --config tsup.worker.config.ts",
    "build:all": "npm run build:cli && npm run build:worker",
    "dev": "tsup --watch",
    "dev:worker": "wrangler dev",
    "deploy:worker": "npm run build:worker && wrangler deploy",
    "deploy:worker:preview": "npm run build:worker && wrangler deploy --env preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test:run"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "slima",
    "writing",
    "novel",
    "ai",
    "beta-reader",
    "claude",
    "chatgpt",
    "gemini",
    "cursor",
    "clawdbot"
  ],
  "author": "Slima Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slima-ai/slima-mcp.git"
  },
  "homepage": "https://slima.ai",
  "bugs": {
    "url": "https://github.com/slima-ai/slima-mcp/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "hono": "^4.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0",
    "wrangler": "^3.0.0"
  }
}
